@model ShoppingCartModel.GiftCardBoxModel
@using Nop.Web.Models.ShoppingCart;
@if (Model.Display)
{
    <div class="giftcard-box panel margin-t15">
        <div class="panel-body">
            <div class="title">
                <strong>@T("ShoppingCart.GiftCardCouponCode")</strong>
            </div>
            @*<div class="hint">@T("ShoppingCart.GiftCardCouponCode.Tooltip")</div>*@
            <div class="coupon-code">
                <div class="row">
                    <div class="col-md-7">
                        <input name="giftcardcouponcode" type="text" class="gift-card-coupon-code form-control" />
                        </div>
                    <input type="submit" name="applygiftcardcouponcode" value="@T("ShoppingCart.GiftCardCouponCode.Button")" class="button-2 btn btn-success apply-gift-card-coupon-code-button" />
                    </div>
                    </div>
                    @if (!String.IsNullOrEmpty(Model.Message))
            {
                        <div class="message">
                            @Model.Message
                        </div>
            }
                </div>
            </div>
}