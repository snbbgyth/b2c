@model ShoppingCartModel.DiscountBoxModel
@using Nop.Web.Models.ShoppingCart;
@if (Model.Display)
{

    <div class="coupon-box panel margin-t15">
        <div class="panel-body">
            <div class="title">
                <strong>@T("ShoppingCart.DiscountCouponCode")</strong>
            </div>
            @*<div class="hint col-sm-3 ">
                    @T("ShoppingCart.DiscountCouponCode.Tooltip")
                </div>*@
                <div class="coupon-code">
                    <div class="row">
                        <div class="col-md-6">
                            <input name="discountcouponcode" type="text" class="discount-coupon-code form-control" />
                        </div>
                        <input type="submit" name="applydiscountcouponcode" value="@T("ShoppingCart.DiscountCouponCode.Button")" class="button-2 btn btn-success apply-discount-coupon-code-button" />
                    </div>
                </div>
                @if (!String.IsNullOrEmpty(Model.Message))
                {
                    <div class="message">
                        @Model.Message
                    </div>
                }
                @if (!String.IsNullOrEmpty(Model.CurrentCode))
                {
                    <div class="current-code">
                        @string.Format(T("ShoppingCart.DiscountCouponCode.CurrentCode").Text, Model.CurrentCode)
                        @*empty value (little hack for FormValueExistsAttribute)*@
                        <input type="submit" name="removediscountcouponcode" value=" " title="@T("Common.Remove")" class="remove-discount-button" />
                    </div>
                }
   
        </div>
    </div>

}