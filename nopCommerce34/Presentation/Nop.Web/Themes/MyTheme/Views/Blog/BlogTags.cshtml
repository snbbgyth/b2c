@model BlogPostTagListModel
@using Nop.Web.Models.Blogs
@if (Model.Tags.Count > 0)
{
    <div class="block block-popular-blogtags panel panel-default left-box">
        <div class="panel-heading">
            <h3 class="panel-title font14 capital"><i class="fa fa-tags"></i> @T("Blog.TagCloud")</h3>
        </div>
        <div class="listbox panel-body">
            <ul class="tags tags-nav no-padd">
                @foreach (var item in Model.Tags)
                {
                    <li>
                        <a href="@Url.RouteUrl("BlogByTag", new { tag = item.Name })" style="font-size:@(Model.GetFontSize(item))%;">@item.Name</a>
                    </li>
                }
            </ul>
        </div>
    </div>
}