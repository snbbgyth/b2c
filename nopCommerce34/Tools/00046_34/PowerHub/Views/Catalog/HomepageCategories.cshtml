@model IList<CategoryModel>

@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="home-page-category-grid container nopadding">
		<div class="title">
			FEATURED CATEGORIES
			<div class="customNavigation">
				<a class="prev" style="cursor:pointer"><img src="@Url.Content("~/themes/powerhub/content/images/left_scroll.png")" alt="PREV" /></a>
				<a class="next" style="cursor:pointer"><img src="@Url.Content("~/themes/powerhub/content/images/right_scroll.png")" alt="PREV" /></a>
			</div>
		</div>
		<div id="owl-demo" class="owl-carousel owl-theme">
			@foreach (var item in Model)
			{
				<div class="item-box item">
					<div class="category-item">
						<h2 class="title">
							<a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title">
								@item.Name</a>
						</h2>
						<div class="picture">
							<a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title">
								<img class="img-responsive" alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl"
										title="@item.PictureModel.Title" /></a>
						</div>
					</div>
				</div>
			}
		</div>
    </div>
}