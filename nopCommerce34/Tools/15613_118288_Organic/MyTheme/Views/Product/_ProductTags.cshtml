<div class="clearfix"></div>
@model IList<ProductTagModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="panel">
        <div class="panel-heading">
            <strong>@T("Products.Tags")</strong>
        </div>
        <div class="panel-body padd-t0">
            <ul class="tags-nav no-padd">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <li>
                        <a href="@Url.RouteUrl("ProductsByTag", new { productTagId = Model[i].Id, SeName = Model[i].SeName })" class="producttag">
                            @Model[i].Name</a> <span class="badge">@T("Products.Tags.Count", Model[i].ProductCount)</span></li>
                    if (i != Model.Count - 1)
                    {
                    }
                }
            </ul>
        </div>
    </div>

}